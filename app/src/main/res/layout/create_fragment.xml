<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:text="Halth facility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/textView"
                    android:textSize="25dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewHealthFacility"
                    android:layout_below="@+id/textView"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="50dp"
                    android:textSize="20dp"
                    android:layout_marginRight="50dp" />

                <TextView
                    android:text="Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewHealthFacility"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/textView10"
                    android:textSize="25dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewName"
                    android:layout_below="@+id/textView10"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="50dp"
                    android:textSize="20dp"
                    android:layout_marginRight="50dp"/>

                <TextView
                    android:text="Address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewName"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/textView3"
                    android:textSize="25dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewAddress"
                    android:layout_below="@+id/textView3"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="50dp"
                    android:textSize="20dp"
                    android:layout_marginRight="50dp"/>

                <TextView
                    android:text="Age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewAddress"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/textView4"
                    android:textSize="25dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewAge"
                    android:layout_below="@+id/textView4"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="50dp"
                    android:textSize="20dp"
                    android:layout_marginRight="50dp"/>

                <TextView
                    android:text="Needs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewAge"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/textView5"
                    android:textSize="25dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewNeeds"
                    android:layout_below="@+id/textView5"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="50dp"
                    android:textSize="20dp"
                    android:layout_marginRight="50dp"/>

                <TextView
                    android:text="Serve to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewNeeds"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/textView6"
                    android:textSize="25dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewServe"
                    android:layout_below="@+id/textView6"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="50dp"
                    android:textSize="20dp"
                    android:layout_marginRight="50dp"/>

                <TextView
                    android:text="Doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewServe"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/textView7"
                    android:textSize="25dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewDoctor"
                    android:layout_below="@+id/textView7"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="50dp"
                    android:textSize="20dp"
                    android:layout_marginRight="50dp"/>

                <TextView
                    android:text="Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewDoctor"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/textView8"
                    android:textSize="25dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewData"
                    android:layout_below="@+id/textView8"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="50dp"
                    android:textSize="20dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="20dp" />

                <Button
                    android:text="Create"
                    android:background="#1C9FB5"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:textSize="20dp"
                    android:layout_below="@+id/textView8"
                    android:layout_marginBottom="30dp" />
            </RelativeLayout>





        </ScrollView>
    </RelativeLayout>
</LinearLayout>